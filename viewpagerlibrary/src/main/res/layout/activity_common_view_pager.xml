<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        tools:context=".demo.CommonViewPagerActivity">
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clipChildren="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerInfinite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clipChildren="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager">

    </androidx.viewpager.widget.ViewPager>
    <com.sakuqi.viewpagerlibrary.view.InfiniteViewPager
            android:id="@+id/viewPagerAutoInfinite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clipChildren="false"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerInfinite"
            app:normal="false"
            app:canLoop="true">

    </com.sakuqi.viewpagerlibrary.view.InfiniteViewPager>
    <com.sakuqi.viewpagerlibrary.view.CircleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/circleIndicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.sakuqi.viewpagerlibrary.view.CircleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/circleIndicator1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleIndicator"
            app:fill_mode="letter"/>
    <com.sakuqi.viewpagerlibrary.view.CircleIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/circleIndicator2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleIndicator1"
            app:fill_mode="number"/>
</androidx.constraintlayout.widget.ConstraintLayout>